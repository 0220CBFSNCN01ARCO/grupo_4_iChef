<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <div class="row headTable">
        <div class="col">
            <h5>Configuración</h5>
        </div>
    </div>
    <div class="container-fluid">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active text-dark" id="marcas-tab" href="#marcas" data-toggle="tab" role="tab" aria-controls="marcas" aria-selected="true">Marcas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" id="grupos-tab" href="#grupos" data-toggle="tab" role="tab" aria-controls="grupos" aria-selected="false">Grupos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="ingredientes-tab" href="#ingredientes" data-toggle="tab" role="tab" aria-controls="ingredientes" aria-selected="false">Ingredientes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="general-tab" href="#general" data-toggle="tab" role="tab" aria-controls="general" aria-selected="false">General</a>
            </li>
        </ul>
        <div class="tab-content" id="tabContentProduct">
            <div class="tab-pane fade show active" id="marcas" role="tabpanel" aria-labelledby="marcas-tab">
              <div class="container">
                <form method="POST" class="formParams" action="/config/addMarca">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6 itemAccion">
                      <input type="text" class="form-control" placeholder="Marca" id="inMarca" name="inMarca">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3 itemAccion">
                      <button id="btnAddMarca" class="btn btn-dark" type="submit">Agregar</button>
                    </div>
                  </div>
                </form>
                <form method="POST" class="formParams" action="/config/buscarRubro">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6 itemAccion">
                      <input class="form-control mr-sm-2" type="search" name="buscarMarca" placeholder="Buscar marca" aria-label="Buscar">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3 itemAccion">
                      <button id="btnBuscarMarca" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                    </div>
                  </div>
                </form>
                <div class="row">
                  <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th class="titleHead" scope="col">Id</th>
                        <th class="titleHead" scope="col">Descripción</th>
                        <th class="titleHead" scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%- include('./partials/tableConfig',{ datos: marcasProd.datos, tipoParametro: 'pMarcas' }) %>
                  </table>
                </div>
                <div class="row indiceTabla">
                  <nav>
                    <ul class="pagination pagination-sm">
                    <%if ( marcasProd.currentPage == 0 ){ %>
                      <li class="page-item disabled">
                    <% } else { %>
                      <li class="page-item"></li>
                    <% } %>
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                      </li>
                      <%for(let i=1; i < marcasProd.totalPages+1; i++ ) { %>
                        <%if ( i == marcasProd.currentPage ){ %>
                          <li class="page-item active" ><a class="page-link" href="/config/marcas/<%= i %>"><%= i %></a></li>
                        <% } else { %>
                          <li class="page-item" ><a class="page-link" href="/config/marcas/<%= i %>"><%= i %></a></li>
                        <% } %>
                      <% } %>
                      <%if ( marcasProd.totalPages == marcasProd.currentPage ){ %>
                        <li class="page-item" disabled>
                      <% } else { %>
                        <li class="page-item"></li>
                      <% } %>
                          <a class="page-link" href="#">Next</a>
                        </li>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="grupos" role="tabpanel" aria-labelledby="grupos-tab">
              <div class="container">
                <form method="POST" class="formParams" action="/config/addRubro">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6">
                      <input type="text" class="form-control" placeholder="Rubro" id="inRubro" name="inRubro">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3">
                      <button id="btnAddGrupo" class="btn btn-dark" type="submit">Agregar</button>
                    </div>
                  </div>
                </form>
                <form method="POST" class="formParams" action="/config/buscarRubro">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6">
                      <input class="form-control mr-sm-2" type="search" name="buscarRubro" placeholder="Buscar rubro" aria-label="Buscar">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3">
                      <button id="btnBuscarGrupo" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                    </div>
                  </div>
                </form>
                <div class="row">
                  <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th class="titleHead" scope="col">Id</th>
                        <th class="titleHead" scope="col">Descripción</th>
                        <th class="titleHead" scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%- include('./partials/tableConfig',{ datos: rubrosProd.rows, tipoParametro: 'pRubros' }) %>
                  </table>
                </div>
                <div class="row indiceTabla">
                  <nav aria-label="Page navigation example">
                    <ul class="pagination ">
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                          <!-- skip_page = (num_page-1)*20 -->
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="ingredientes" role="tabpanel" aria-labelledby="ingredientes-tab">
              <div class="container">
                <form method="POST" class="formParams" action="/config/addIngrediente">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6">
                      <input type="text" class="form-control" placeholder="Ingrediente" id="inIngrediente" name="inIngrediente">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3">
                      <button id="btnAddIngrediente" class="btn btn-dark" type="submit">Agregar</button>
                    </div>
                  </div>
                </form>
                <form method="POST" class="formParams" action="/config/buscarIngrediente">
                  <div class="row">
                    <div class="col-sm-8 col-md-8 col-lg-6">
                      <input class="form-control mr-sm-2" type="search" name="buscarIngrediente" placeholder="Buscar Ingrediente" aria-label="Buscar">
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-3">
                      <button id="btnBuscarIngrediente" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                    </div>
                  </div>
                </form>
                <div class="row">
                  <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th class="titleHead" scope="col">Id</th>
                        <th class="titleHead" scope="col">Descripción</th>
                        <th class="titleHead" scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%- include('./partials/tableConfig',{ datos: ingredientesProd.rows, tipoParametro: 'pIngredientes' }) %>
                  </table>
                </div>
                <div class="row indiceTabla">
                  <nav aria-label="Page navigation example">
                    <ul class="pagination ">
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item"><a class="page-link" href="#">2</a></li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                          <!-- skip_page = (num_page-1)*20 -->
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="general" role="tabpanel" aria-labelledby="general-tab">
              <div class="row rowConfig">
                <div class="col-sm-6">
                  <div class="card">
                    <div class="card-header text-white bg-dark mb-3">Tipos de productos</div>
                    <div class="card-body">
                      <div class="container">
                        <form method="POST" class="formParams" action="/config/addTipo">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input type="text" class="form-control" placeholder="Tipo producto" id="inTipoProd" name="inTipoProd">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnAddTipoProducto" class="btn btn-dark" type="submit">Agregar</button>
                            </div>
                          </div>
                        </form>
                        <form method="POST" class="formParams" action="/config/buscarTipo">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input class="form-control mr-sm-2" type="search" name="buscarTipoProducto" placeholder="Buscar tipo" aria-label="Buscar">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnBuscarTipoProducto" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                            </div>
                          </div>
                        </form>
                        <div class="row">
                          <table class="table table-striped">
                            <thead class="thead-dark">
                            <tr>
                                <th class="titleHead" scope="col">Id</th>
                                <th class="titleHead" scope="col">Descripción</th>
                                <th class="titleHead" scope="col">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%- include('./partials/tableConfig', { datos: tipoProducto.rows, tipoParametro: 'pTipoProducto' }) %>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="card">
                    <div class="card-header text-white bg-dark mb-3">Cantidad comensales</div>
                    <div class="card-body">
                      <div class="container">
                        <form method="POST" class="formParams" action="/config/addComensal">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input type="text" class="form-control" placeholder="Comensales" id="inCantComensal" name="inCantComensal">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnAddCantComensal" class="btn btn-dark" type="submit">Agregar</button>
                            </div>
                          </div>
                        </form>
                        <form method="POST" class="formParams" action="/config/buscarComensal">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input class="form-control mr-sm-2" type="search" name="buscarComensales" placeholder="Buscar comensales" aria-label="Buscar">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnBuscarCantComensal" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                            </div>
                          </div>
                        </form>
                        <div class="row">
                          <table class="table table-striped">
                            <thead class="thead-dark">
                            <tr>
                              <th class="titleHead" scope="col">Id</th>
                              <th class="titleHead" scope="col">Nro. comensales</th>
                              <th class="titleHead" scope="col">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%- include('./partials/tableConfig', { datos: cantComensales.rows, tipoParametro: 'pComensales' }) %>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row rowConfig">
                <div class="col-sm-6">
                  <div class="card">
                    <div class="card-header text-white bg-dark mb-3">Estado usuarios</div>
                    <div class="card-body">
                      <div class="container">
                        <form method="POST" class="formParams" action="/config/addEstadoUser">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input type="text" class="form-control" placeholder="Estado" id="inEstado" name="inEstado">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnAddEstadoUser" class="btn btn-dark" type="submit">Agregar</button>
                            </div>
                          </div>
                        </form>
                        <form method="POST" class="formParams" action="/config/buscarEstadoUser">
                          <div class="row">
                            <div class="col-sm-8 col-md-8 col-lg-6">
                              <input class="form-control mr-sm-2" type="search" name="buscarEstadoUsuario" placeholder="Buscar estado" aria-label="Buscar">
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-3">
                              <button id="btnBuscarEstadoUser" class="btn btn-dark my-2 my-sm-0" type="submit"><span class="ichef-search1"></span></button>
                            </div>
                          </div>
                        </form>
                        <div class="row">
                          <table class="table table-striped">
                            <thead class="thead-dark">
                            <tr>
                              <th class="titleHead" scope="col">Id</th>
                              <th class="titleHead" scope="col">Descripción</th>
                              <th class="titleHead" scope="col">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%- include('./partials/tableConfig', { datos: estadoUsuario.rows, tipoParametro: 'pEstadoUsuario' }) %>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>
    <%-include('./partials/script')%>
</body>
</html>