<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="hold-transition login-page">
    <%- include('./partials/header') %>
    <div class="fondoFormulario">
        <div class="register-box">
            <div class="register-box-body">
                <h3 class="register-box-msg"><b>Registración</b></h3>
                <form class="frmRegistro needs-validation" novalidate>
                    <div class="row">
                        <div class="card">
                            <div class="card-header">Datos personales</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-user-circle"></i></span>
                                            </div>
                                            <input type="text" class="form-control" id="nombre" placeholder="Nombre" required>
                                            <div class="invalid-feedback">Debe ingresar un nombre.</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-user-circle-o"></i></span>
                                            </div>
                                            <input type="text" class="form-control" id="apellido" placeholder="Apellido" required>
                                            <div class="invalid-feedback">Debe ingresar un apellido.</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                            </div>
                                            <input type="number" class="form-control" id="telefono" placeholder="Nro. teléfono" required>
                                            <div class="invalid-feedback">Debe ingresar un número de teléfono.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">Datos cuenta</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                            </div>
                                            <input type="email" class="form-control" id="email" placeholder="Email" required>
                                            <div class="invalid-feedback">Debe ingresar una dirección de email.</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa fa-key"></i></span>
                                            </div>
                                            <input type="password" class="form-control" id="password" placeholder="Contraseña" required>
                                            <div class="invalid-feedback">Debe ingresar una contraseña.</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa fa-key"></i></span>
                                            </div>
                                            <input type="password" class="form-control" id="repeatPassword" placeholder="Repita contraseña" required>
                                            <div class="invalid-feedback">Debe repetir la constraseña.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-xs-12 mt-3">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Registrarme</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>
    <%-include('./partials/script')%>
</body>
</html>