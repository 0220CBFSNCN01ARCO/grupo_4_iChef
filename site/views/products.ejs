<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>
<body class='body_market'>
    <%- include('./partials/header') %>
    <!--cuerpo-->
    <div class = "container-fluid grillaProductos">
      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
        <% for(let i=0; i < productos.length; i++) { %>
          <div class="col mb-4">
            <div class="card h-100">
              <img src="/images/products/<%=productos[i].product_type_id %>/<%=productos[i].fotos[0].nombre %>"
                  class="card-img-top img-fluid" alt="<%= productos[i].descripcion %>">
              <div class="card-body">
                <div class="row rowNombre">
                  <h5 class="card-title"><%= productos[i].descripcion %></h5>
                </div>
                <div class="row rowMarca">
                  <p class="card-text text-muted">Marca: <%= productos[i].marca.descripcion %></p>
                </div>
                <div class="row rowprecio">
                  <p class="p-market">$<%= productos[i].precio %></p>
                </div>
                <div class="card-body">
                  <div class="row row-actions justify-content-around">
                    <a href="/product/<%= productos[i].codigo %>" class="btn btn-dark">Ver detalle</a>
                    <a href="#" class="btn btn-dark"><i class="fa fa-cart-plus"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <%- include('./partials/footer') %>
    <%-include('./partials/script')%>
</body>
</html>