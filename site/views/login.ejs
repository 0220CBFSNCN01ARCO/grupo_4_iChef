<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="hold-transition login-page">
    <%- include('./partials/header') %>
    <div class="login-box">
        <div class="login-box-body">
          <h3 class="login-box-msg"><b>Login</b></h3>
          <form action="#" method="post">
            <div class="input-group has-feedback">
              <input type="email" class="form-control" placeholder="Email">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
            </div>
            <div class="input-group has-feedback">
              <input type="password" class="form-control" placeholder="Password">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            </div>
            <div class="row rowLogin">
              <div class="col-xs-8">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                      Recordarme
                    </label>
                  </div>
              </div>
              <!-- /.col -->
              <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
              </div>
              <!-- /.col -->
            </div>
          </form>

          <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebookLogin btn-flat">
                <i class="fa fa-facebook"></i> Ingresar usando Facebook</a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google"></i> Ingresar usando Google</a>
          </div>
          <!-- /.social-auth-links -->
          <a href="#">Olvide mi contrase√±a</a><br>
          <a href="./users/login" class="text-center">Registrarme</a>
        </div>
        <!-- /.login-box-body -->
      </div>
      <%- include('./partials/footer') %>
      <%-include('./partials/script')%>
</body>
</html>