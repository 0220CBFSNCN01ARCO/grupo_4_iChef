<tr>
    <th scope="row"><%= productos.codigo %></th>
    <td><%= productos.descripcion %></td>
    <td class="colPrecio"><%= productos.precio %></td>
    <td>
        <div class="row justify-content-around align-items-center d-flex">
            <div class="row-item">
                <a class="editLink" data-toggle="tooltip" href="/product/<%= productos.codigo %>/edit">
                    <i class="fa fa-pencil fa-1x"></i>
                </a>
            </div>
            <div class="row-item">
                <form method="POST" action="/product/<%= productos.codigo %>?_method=DELETE">
                    <button class="btn deleteLink" type="submit"><i class="fa fa-trash fa-1x"></i></button>
                </form>
            </div>
        </div>
    </td>
</tr>
